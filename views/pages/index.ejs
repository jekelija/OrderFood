<!-- for hooking this up to back end nodejs and mongo: http://adrianmejia.com/blog/2014/10/03/mean-stack-tutorial-mongodb-expressjs-angularjs-nodejs/ -->
<html ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/main.css">
    <link rel="stylesheet" href="css/ngDialog.min.css">
    <link rel="stylesheet" href="css/ngDialog-theme-default.min.css">

    <!-- Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.3/ui-bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-scroll/0.7.2/angular-scroll.js"></script>
    <script src="js/ngDialog.min.js"></script>
    <title>Order Food From Jon!</title>

</head>
<body id="page-top" class="index">

<!--by including the app.js here, it will get auto-included in every html page -->
<script src="js/app.js"></script>    
<!-- services -->
<!--script src="js/services/user.service.js"></script-->
<!-- controllers -->
<script src="js/controllers/orderController.js"></script>

<div style="margin-top: 40px; margin-left: 40px;" ng-controller="OrderController">
    <h1>Welcome to the Jekeli's! </h1>
    <h2 class="text-muted">Please place your order from the grill below!</h2>
    <div>
        <div class="row">
            <div class="col-lg-6" style="border-top-style:solid; border-right-style:solid;">
                <h3>Add Items to your order</h3>
                <input type="checkbox" name="burger" id="burger" ng-model="burgerChecked"/>
                <label for="burger">Burger</label>
                <div style="margin-left:20px" ng-show="burgerChecked">
                    <div>
                        <label class="label-text-input" for="americanCheese">American Cheese Slices: </label>
                        <input class="text-input" type="number" name="americanCheese" id="americanCheese" ng-model="americanCheese" min="0" max="10"/>
                        <br/>
                        <label class="label-text-input" for="swisscheese">Swiss Cheese Slices: </label>
                        <input class="text-input" type="number" name="swissCheese" id="swissCheese" ng-model="swissCheese"  min="0" max="10"/>
                        <br/>
                        <label class="label-text-input" for="cheddarcheese">Cheddar Cheese Slices: </label>
                        <input class="text-input" type="number" name="cheddarCheese" id="cheddarCheese" ng-model="cheddarCheese"  min="0" max="10"/>
                        <br/>
                        <label for="numBurger">Number of burgers: </label>
                        <input type="number" name="numBurger" id="numBurger" ng-model="numBurger"  min="1" max="10"/>
                        <br/>
                        <button ng-click="addBurger()">Add Burger</button>
                    </div>
                </div>
                
                <br/>
                <input type="checkbox" name="hotDog" id="hotDog" ng-model="hotDogChecked"/>
                <label for="hotDog">Hot Dogs</label>
                <div style="margin-left:20px" ng-show="hotDogChecked">
                    <span>How do you like it cooked?</span>
                    <br/>
                    <input type="radio" id="burnt" value="burnt" ng-model="dogType"/>
                    <label for="burnt">Burnt</label>
                    <input type="radio" id="medium" value="medium" ng-model="dogType"/>
                    <label for="medium">Medium</label>
                    <input type="radio" id="lukewarm"value="lukewarm" ng-model="dogType"/>
                    <label for="lukewarm">Lukewarm</label>
                    <br/>
                    <label for="numDogs">Number of hot dogs: </label>
                    <input type="number" name="numDogs" id="numDogs" ng-model="numDogs"  min="1" max="10"/>
                    <br/>
                    <button ng-click="addHotDogs()">Add Hot Dog(s)</button>
                </div>
                
                <br/>
                <input type="checkbox" name="chicken" id="chicken" ng-model="chickenChecked"/>
                <label for="chicken">Chicken Thighs</label>
                <div style="margin-left:20px" ng-show="chickenChecked">
                    <span>Sauce</span>
                    <br/>
                    <input type="radio" id="plain" value="plain" ng-model="chickenType"/>
                    <label for="plain">Plain</label>
                    <input type="radio" id="barbecue" value="barbecue sauce" ng-model="chickenType"/>
                    <label for="barbecue">Barbecue Sauce</label>
                    <input type="radio" id="wing"value="medium wing sauce" ng-model="chickenType"/>
                    <label for="wing">Medium Wing Sauce</label>
                    <input type="radio" id="teryaki"value="teryaki sauce" ng-model="chickenType"/>
                    <label for="teryaki">Teryaki</label>
                    <br/>
                    <label for="numChicken">Number of chicken thighs: </label>
                    <input type="number" name="numChicken" id="numChicken" ng-model="numChicken"  min="1" max="10"/>
                    <br/>
                    <button ng-click="addChicken()">Add Chicken</button>
                </div>
            </div>
            <div class="col-lg-6" style="border-top-style:solid;">
                <h3>Your current order: </h3>
                <div>
                    <!--ng-bind is one-way data binding, scope to view only; display only-->
                    <pre ng-bind="currentOrderStr"></pre>
                </div>
            </div>
        </div>
    </div>
</div> 

</body>
</html>